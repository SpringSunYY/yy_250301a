    <sql id="selectBPOrderInfoVo">
        select id, order_number, order_type, store_id, b_p_price, b_p_time, after_sale_price, after_sale_time, after_sale_image, user_id, create_time, update_by, update_time, remark, dept_id from tb_b_p_order_info
    </sql>

    <select id="selectBPOrderInfoList" parameterType="BPOrderInfo" resultMap="BPOrderInfoResult">
        <include refid="selectBPOrderInfoVo"/>
        <where>  
            <if test="orderNumber != null  and orderNumber != ''"> and order_number = #{orderNumber}</if>
            <if test="orderType != null  and orderType != ''"> and order_type = #{orderType}</if>
            <if test="storeId != null "> and store_id = #{storeId}</if>
            <if test="params.beginBPTime != null and params.beginBPTime != '' and params.endBPTime != null and params.endBPTime != ''"> and b_p_time between #{params.beginBPTime} and #{params.endBPTime}</if>
            <if test="params.beginAfterSaleTime != null and params.beginAfterSaleTime != '' and params.endAfterSaleTime != null and params.endAfterSaleTime != ''"> and after_sale_time between #{params.beginAfterSaleTime} and #{params.endAfterSaleTime}</if>
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="params.beginCreateTime != null and params.beginCreateTime != '' and params.endCreateTime != null and params.endCreateTime != ''"> and create_time between #{params.beginCreateTime} and #{params.endCreateTime}</if>
            <if test="updateBy != null  and updateBy != ''"> and update_by like concat('%', #{updateBy}, '%')</if>
            <if test="params.beginUpdateTime != null and params.beginUpdateTime != '' and params.endUpdateTime != null and params.endUpdateTime != ''"> and update_time between #{params.beginUpdateTime} and #{params.endUpdateTime}</if>
            <if test="deptId != null "> and dept_id = #{deptId}</if>
        </where>
    </select>
    
    <select id="selectBPOrderInfoById" parameterType="Long" resultMap="BPOrderInfoResult">
        <include refid="selectBPOrderInfoVo"/>
        where id = #{id}
    </select>

